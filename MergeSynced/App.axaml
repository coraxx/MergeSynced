<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MergeSynced"
             x:Class="MergeSynced.App"
             Name="MergeSynced"
             RequestedThemeVariant="Default">

	<NativeMenu.Menu>
		<NativeMenu>
			<NativeMenuItem Header="About Merge Synced" Click="AboutMenuItem_OnClick" />
		</NativeMenu>
	</NativeMenu.Menu>
    
    <Application.Styles>
        <FluentTheme>
            <FluentTheme.Palettes>
                <ColorPaletteResources x:Key="Dark"
                                       RegionColor="#FF232323"
                                       AltHigh="#FF232323"
                                       AltLow="#FF232323"
                                       AltMedium="#FF232323"
                                       AltMediumHigh="#FF232323"
                                       AltMediumLow="#FF232323"  />
            </FluentTheme.Palettes>
        </FluentTheme>
    </Application.Styles>

    <Application.Resources>
        <CornerRadius x:Key="ControlCornerRadius">16</CornerRadius>
        <CornerRadius x:Key="OverlayCornerRadius">12</CornerRadius>
		<Thickness x:Key="ComboBoxDropdownContentMargin">1</Thickness>
    </Application.Resources>
</Application>